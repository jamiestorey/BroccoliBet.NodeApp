<h1>Bets</h1>
<div class="row">
    {{#each bets}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{fixtureID}}</h5>
                {{!-- <p>{{stripTags (truncate body 150)}}</p> --}}
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/bets/user/{{user._id}}">{{user.displayName}}   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/bets/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No bets to display</p>
    {{/each}}
</div>