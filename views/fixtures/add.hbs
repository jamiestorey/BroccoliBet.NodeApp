    <script>
        var sliderHome = document.getElementById("guessHomeScore");
        var outputHome = document.getElementById("guessHomeScore1");
        outputHome.innerHTML = sliderHome.value;

        sliderHome.oninput = function () {
            outputHome.innerHTML = this.value;
